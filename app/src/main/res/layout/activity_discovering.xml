<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="15sp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:text="@string/nalezena_zarizeni"/>
    <ImageButton
        android:id="@+id/searchBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listView2"
        android:layout_toEndOf="@+id/txtHeadline"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <RelativeLayout
        android:id="@+id/InnerRelativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" ></RelativeLayout>

    <ImageButton
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/InnerRelativeLayout2"
        android:layout_toEndOf="@+id/InnerRelativeLayout2"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/saveBtn"
        android:background="@android:color/darker_gray"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtHeadline"
        android:id="@+id/listView2" />



</RelativeLayout>